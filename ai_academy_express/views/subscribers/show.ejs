<h2>Détails de l'abonné</h2>
<div class="subscriber-details">
  <h3><%= subscriber.name %></h3>
  <p><strong>Email:</strong> <%= subscriber.email %></p>
  <p><strong>Code Postal:</strong> <%= subscriber.zipCode %></p>
</div>
<a href="/subscribers" class="btn btn-primary">Retour à la liste</a>
<a href="/subscribers/<%= subscriber._id %>/edit" class="btn btn-warning"
  >Modifier cet abonné</a
>

<!-- Formulaire pour supprimer l'abonné -->
<form
  action="/subscribers/<%= subscriber._id %>/delete"
  method="POST"
  style="margin-top: 20px"
>
  <button type="submit" class="btn btn-danger">Supprimer cet abonné</button>
</form>
